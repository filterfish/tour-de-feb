= form_for(@ride) do |f|
  - if @ride.errors.any?
    #error_explanation
      %h2
        = pluralize(@ride.errors.count, "error")
        prohibited this ride from being saved:
      %ul
        - @ride.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :length
    %br/
    = f.text_field :length
  .field
    = f.label :time
    %br/
    = f.text_field :time
  .field
    = f.label :date
    %br/
    = f.datetime_select :date
  .actions
    = f.submit
